

<section>
  <div class="container">
    <div class="row mt-4">
      <a class="btn btn-primary ml-auto" href="/admin/add-product"> Add products</a>
    </div>
    <table class="table mt-5" id="products-table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col">Orders</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
     
        {{#each products}}
        <tr>
         
          <th scope="row">{{ @index}}</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Price}}</td>
          <td>{{this.Description}}</td>


          <td><img style="width: 60px; height: 50px; background: ;" src="/product-images/{{this._id}}.jpg" alt=""></td>

            <td>No.{{ordercount}}</td>
            
          <td> <a href="/admin/edit-product/{{this._id}}"> <button class="btn btn-warning">Edit</button></a>
            <a href="/admin/delete-product/{{this._id}}"> <button class="btn btn-danger"
                onclick="return confirm('Sure want to delete {{this.Name}}')">Delete</button> </a>
          </td>
        

        </tr>

        {{/each}}

      </tbody>
    </table>
  </div>
</section>

<script>
 $(function() {
    $('#products-table').DataTable({
        "columnDefs": [
            { "orderable": false, "targets": [ 2, 4, 5, 7] } // Indexes of columns where sorting is disabled
        ]
    });
});


</script>
